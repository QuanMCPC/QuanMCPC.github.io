					document.getElementById("accb_small_").getElementsByTagName("p")[0].getElementsByTagName("a")[0].innerHTML = "How did I make the website? &#8681;"
				});
				window.onload = window.onresize = function() {
					check()
					document.getElementById("accb_small_").getElementsByTagName("p")[0].getElementsByTagName("a")[0].innerHTML = "How did I make the website? &#8681;"
					accb_small_isOn = false;
